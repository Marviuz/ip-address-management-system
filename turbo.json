{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"],
      "env": ["PORT", "DATABASE_URL"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "env": ["DATABASE_URL"],
      "persistent": true
    },
    "db:migrate": {
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "env": ["DATABASE_URL"]
    }
  }
}
